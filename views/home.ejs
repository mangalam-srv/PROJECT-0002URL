<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>URL Shortener</title>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      padding: 20px;
      background-color: #1f1f1f;
      color: #ffffff;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h1 {
      margin-bottom: 20px;
    }

    form {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
      margin-bottom: 30px;
      width: 100%;
      max-width: 400px;
    }

    label {
      font-weight: bold;
    }

    input, button {
      width: 100%;
      padding: 10px;
      border: none;
      border-radius: 5px;
    }

    input {
      background-color: #444;
      color: white;
    }

    button {
      background-color: #4CAF50;
      color: white;
      font-weight: bold;
      cursor: pointer;
    }

    button:hover {
      background-color: #45a049;
    }

    p {
      background-color: #2c2c2c;
      padding: 10px 20px;
      border-radius: 5px;
      margin-bottom: 20px;
    }

    table {
      border-collapse: collapse;
      width: 90%;
      max-width: 800px;
      background-color: #2c2c2c;
      margin-top: 20px;
    }

    th, td {
      padding: 12px;
      text-align: center;
      border: 1px solid #444;
    }

    th {
      background-color: #333;
    }

    tr:nth-child(even) {
      background-color: #3a3a3a;
    }

    tr:hover {
      background-color: #555;
    }
  </style>
</head>
<body>
  <h1>URL SHORTENER</h1>

  <% if(locals.id){ %> 
    <p>URL GENERATED: <a style="color:lightgreen;" href="http://localhost:8001/<%= id %>" target="_blank">http://localhost:8001/<%= id %></a></p>
  <% } %>

  <form method="post" action="/url">
    <label>Enter your original URL</label>
    <input type="text" name="url" placeholder="https://example.com" required />
    <button type="submit">Generate</button>
  </form>

  <% if (locals.urls) { %>
    <table>
      <thead>
        <tr>
          <th>S. No</th>
          <th>Short ID</th>
          <th>Redirect</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectURL %></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</body>
</html>
